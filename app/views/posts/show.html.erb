<section class="padding">
	<div class="row">
		<div class="column_8 offset_2 padding bottom">
			<p>
				<strong>Title:</strong>
				<%= @post.title %>
			</p>

			<p>
				<strong>Author:</strong>
				<%= @post.author %>
			</p>

			<p>
				<strong>Text:</strong>
				<%= @post.text %>
			</p>

			<h4>Comments</h4>
			<% @post.comments.each do |comment| %>
				<p>
					<strong>Author:</strong>
					<%= comment.commenter %>
				</p>

				<p>
					<strong>Comment:</strong>
					<%= comment.body %>
				</p>
			<% end %>
	

		<h3>Add a comment:</h3>
		<%= form_for([@post, @post.comments.build]) do |f| %>
			<P>
				<%= f.label :commenter %><br />
				<%= f.text_field :commenter %>
			</p>
			<p>
				<%= f.label :body %><br />
				<%= f.text_area :body %>
			</p>
			<p>
				<%= f.submit %>
			</p>
		<% end %>

		<hr>
		<%= link_to 'Back', posts_path, {:class => "button secondary"} %> |
		<%= link_to 'Destroy', posts_path(@post.id), method: :delete, data: { confirm: 'Are you sure?'} %> 
			



		</div>
	</div>
</section>
